<div class="hello">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="field">
    Name:<%= f.text_field :name %><% resource.errors.full_messages_for(:name).each do |message| %><%= message %><% end %>
  </div><br>
  <div class="field">
   Email: <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
   <% resource.errors.full_messages_for(:email).each do |message| %>
     <%= message %>
    <% end %>
  </div><br>
    <div class="field">
    Mobile:<%= f.text_field :mobile %><% resource.errors.full_messages_for(:mobile).each do |message| %><%= message %><% end %>
  </div><br>
  <div class="field">
    Password:<%= f.password_field :password, autocomplete: "new-password" %><% resource.errors.full_messages_for(:password).each do |message| %>password must contains one alphet and number,special characher<% end %>
  </div><br>

  <div class="field">
    Confirm password:<%= f.password_field :password_confirmation, autocomplete: "new-password" %><% resource.errors.full_messages_for(:password_confirmation).each do |message| %>password must match<% end %>
  </div><br>
    <div class="field">
    Organization:<%= f.select :organization_id,Organization.all.pluck(:name, :id) %>
  </div><br>
   <div>
         <%= f.label :profilePic %><br>
          <%= f.file_field :image %>
        </div>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
<style>
  .hello{
    content: center;
    padding-left: 40%;
    background-color: lightblue;
  }
</style> 