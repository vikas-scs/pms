<div class="hello">
  <h1>New Tasks</h1>
  <%= form_with(model: @task) do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
        <%= form.hidden_field :project_id, value: params[:id] %>
    <% @task.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
      </div><br>
    <% end %>
    
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</div>
<style>
  .hello{
    content: center;
    padding-left: 40%;
    background-color: lightyellow;
  }
</style>